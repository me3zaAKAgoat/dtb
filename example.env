# REQUIRED: Server port
PORT=3000

# REQUIRED: MongoDB connection string
# Format: mongodb://[username:password@]host[:port][/database][?options]
# For local MongoDB: mongodb://localhost:27017/dtb
# For MongoDB container: mongodb://mongodb:27017/dtb
MONGODB_URI=

# REQUIRED: JWT secret key for token signing (use a strong random string)
SECRET=

# REQUIRED: JWT token expiration (e.g., "7d", "24h", "1h")
TOKEN_EXPIRATION=7d


# OPTIONAL: Cloudinary configuration (only needed for avatar uploads)
# If not set, avatar upload feature will fail
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

